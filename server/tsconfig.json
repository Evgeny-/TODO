{
   "compilerOptions": {
     "target": "ES2024",
     "module": "ESNext",
     "moduleResolution": "node",
     "lib": ["ES2024", "DOM"],
     "outDir": "dist",
     "rootDir": "src",
     "strict": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "declaration": true
   },
   "include": ["src/**/*", "tests/**/*", "../electron-client/src/renderer/src/utils/collaboration.ts"],
   "exclude": ["node_modules"]
 }
 